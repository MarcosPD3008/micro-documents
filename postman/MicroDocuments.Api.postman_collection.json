								{
									"key": "Channel",
									"value": "DIGITAL",
									"type": "text",
									"description": "Canal: BRANCH, DIGITAL, BACKOFFICE, OTHER (requerido)"
								},
								{
									"key": "CustomerId",
									"value": "customer-123",
									"type": "text",
									"description": "ID del cliente (opcional)"
								},
								{
									"key": "CorrelationId",
									"value": "correlation-123",
									"type": "text",
									"description": "ID de correlación para trazabilidad (opcional)"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/bhd/mgmt/1/documents/actions/upload",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"bhd",
								"mgmt",
								"1",
								"documents",
								"actions",
								"upload"
							]
						},
