								{
									"key": "filename",
									"value": "test",
									"description": "Filtrar por nombre de archivo (coincidencia parcial)"
								},
								{
									"key": "contentType",
									"value": "application/pdf",
									"description": "Filtrar por tipo MIME"
								},
								{
									"key": "documentType",
									"value": "CONTRACT",
									"description": "Filtrar por tipo de documento: KYC, CONTRACT, FORM, SUPPORTING_DOCUMENT, OTHER"
								},
								{
									"key": "status",
									"value": "RECEIVED",
									"description": "Filtrar por estado: RECEIVED, SENT, FAILED"
								},
								{
									"key": "customerId",
									"value": "customer-123",
									"description": "Filtrar por ID de cliente"
								},
								{
									"key": "channel",
									"value": "DIGITAL",
									"description": "Filtrar por canal: BRANCH, DIGITAL, BACKOFFICE, OTHER"
