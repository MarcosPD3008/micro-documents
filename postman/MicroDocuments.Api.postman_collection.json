							"raw": "{{base_url}}/api/bhd/mgmt/1/documents/search?page=1&pageSize=10&sortBy=uploadDate&sortDirection=DESC&filter=filename contains 'test' AND status eq 'RECEIVED'",
							"host": [
								"{{base_url}}"
							],
							"path": [
